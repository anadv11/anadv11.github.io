---
layout: default
---

<style>
.password-container {
  max-width: 600px;
  margin: 100px auto;
  text-align: center;
  padding: 40px 20px;
  background: var(--global-card-bg-color);
  border-radius: 15px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.1);
}

.password-form {
  margin: 30px 0;
}

.password-input {
  width: 100%;
  max-width: 300px;
  padding: 12px 20px;
  margin: 8px 0;
  border: 2px solid var(--global-divider-color);
  border-radius: 25px;
  font-size: 16px;
  outline: none;
  transition: border-color 0.3s ease;
}

.password-input:focus {
  border-color: var(--global-theme-color);
}

.password-button {
  background: var(--global-theme-color);
  color: white;
  padding: 12px 30px;
  border: none;
  border-radius: 25px;
  font-size: 16px;
  cursor: pointer;
  margin: 10px;
  transition: all 0.3s ease;
}

.password-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(0,0,0,0.2);
}

.password-error {
  color: #dc3545;
  margin: 10px 0;
  font-size: 14px;
  display: none;
}

.content-hidden {
  display: none;
}

.content-visible {
  display: block;
}

.lock-icon {
  font-size: 48px;
  margin-bottom: 20px;
  opacity: 0.7;
}

/* Post metadata styles */
.post-title {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
  color: var(--global-text-color);
}

.post-meta {
  font-size: 0.9rem;
  color: var(--global-text-color-light);
  margin-bottom: 1rem;
}

.post-tags {
  font-size: 0.9rem;
  color: var(--global-text-color-light);
  margin-bottom: 2rem;
}

.post-tags a {
  color: var(--global-text-color-light);
  text-decoration: none;
  transition: color 0.3s ease;
}

.post-tags a:hover {
  color: var(--global-theme-color);
  text-decoration: underline;
}
</style>

<!-- Post Header (always visible) -->
<header class="post-header">
  <h1 class="post-title">{{ page.title }}</h1>
  
  <p class="post-meta">
    Created on {{ page.date | date: '%B %d, %Y' }}
    {% if page.author %}by {{ page.author }}{% endif %}
    {% if page.last_updated %}, last updated on {{ page.last_updated | date: '%B %d, %Y' }}{% endif %}
    {% if page.meta %}â€¢ {{ page.meta }}{% endif %}
  </p>
  
  <p class="post-tags">
    {% assign year = page.date | date: '%Y' %}
    {% assign tags = page.tags | join: '' %}
    {% assign categories = page.categories | join: '' %}
    {% assign url_beginning = page.url | slice: 0, 6 %}
    
    {% if url_beginning == '/blog/' %}
      <a href="{{ year | prepend: '/blog/' | relative_url }}"> <i class="fa-solid fa-calendar fa-sm"></i> {{ year }} </a>
    {% else %}
      <i class="fa-solid fa-calendar fa-sm"></i> {{ year }}
    {% endif %}
    
    {% if tags != '' %}
      &nbsp; &middot; &nbsp;
      {% for tag in page.tags %}
        {% if url_beginning == '/blog/' %}
          <a href="{{ tag | slugify | prepend: '/blog/tag/' | relative_url }}"> <i class="fa-solid fa-hashtag fa-sm"></i> {{ tag }}</a>
        {% else %}
          <i class="fa-solid fa-hashtag fa-sm"></i> {{ tag }}
        {% endif %}
        {% unless forloop.last %}
          &nbsp;
        {% endunless %}
      {% endfor %}
    {% endif %}

    {% if categories != '' %}
      &nbsp; &middot; &nbsp;
      {% for category in page.categories %}
        {% if url_beginning == '/blog/' %}
          <a href="{{ category | slugify | prepend: '/blog/category/' | relative_url }}"> <i class="fa-solid fa-tag fa-sm"></i> {{ category }}</a>
        {% else %}
          <i class="fa-solid fa-tag fa-sm"></i> {{ category }}
        {% endif %}
        {% unless forloop.last %}
          &nbsp;
        {% endunless %}
      {% endfor %}
    {% endif %}
  </p>
</header>

<!-- Password Protection Form -->
<div class="password-container" id="passwordForm">
  <div class="lock-icon">ðŸ”’</div>
  <h2>Protected Content</h2>
  <p>This post is password protected. Please enter the password to continue.</p>
  
  <form class="password-form" onsubmit="checkPassword(event)">
    <input type="password" 
           class="password-input" 
           id="passwordInput" 
           placeholder="Enter password" 
           required>
    <br>
    <button type="submit" class="password-button">Unlock Content</button>
  </form>
  
  <div class="password-error" id="passwordError">
    Incorrect password. Please try again.
  </div>
</div>

<!-- Protected Content -->
<div class="content-hidden" id="protectedContent">
  {{ content }}
</div>

<script>
function checkPassword(event) {
  event.preventDefault();
  
  const password = document.getElementById('passwordInput').value;
  const correctPassword = '{{ page.password }}'; // This gets the password from the front matter
  
  if (password === correctPassword) {
    // Store in session storage so user doesn't have to re-enter
    sessionStorage.setItem('post_authenticated_{{ page.url | slugify }}', 'true');
    
    // Show content
    document.getElementById('passwordForm').style.display = 'none';
    document.getElementById('protectedContent').classList.remove('content-hidden');
    document.getElementById('protectedContent').classList.add('content-visible');
  } else {
    // Show error
    document.getElementById('passwordError').style.display = 'block';
    document.getElementById('passwordInput').value = '';
    document.getElementById('passwordInput').focus();
  }
}

// Check if user is already authenticated
document.addEventListener('DOMContentLoaded', function() {
  const isAuthenticated = sessionStorage.getItem('post_authenticated_{{ page.url | slugify }}');
  
  if (isAuthenticated === 'true') {
    document.getElementById('passwordForm').style.display = 'none';
    document.getElementById('protectedContent').classList.remove('content-hidden');
    document.getElementById('protectedContent').classList.add('content-visible');
  }
});
</script>
